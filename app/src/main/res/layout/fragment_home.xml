<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred_fifty"
                android:layout_marginStart="@dimen/three"
                android:layout_marginTop="@dimen/three"
                android:layout_marginEnd="@dimen/three"
                android:layout_marginBottom="@dimen/three"
                android:background="@drawable/topbackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Back"
                    android:textSize="@dimen/twenty_five"
                    android:fontFamily="@font/jost_bold"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginLeft="@dimen/thirty"
                    android:textColor="@color/white">


                </TextView>

                <RelativeLayout
                    android:id="@+id/rel_logout"
                    android:layout_width="@dimen/thirty_five"
                    android:layout_height="@dimen/thirty_five"
                    android:background="@drawable/roundshape"
                    android:elevation="@dimen/five"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/fifteen">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/logout_icon">

                    </ImageView>


                </RelativeLayout>


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eighty"
                android:layout_marginLeft="@dimen/fifteen"
                android:layout_marginRight="@dimen/fifteen"
                app:cardCornerRadius="@dimen/ten"
                android:id="@+id/banner_card">

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/imageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/two_hundred"
                    app:sliderAnimationDuration="500"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderAutoCycleEnabled="true"
                    app:sliderIndicatorAnimationDuration="500"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorMargin="@dimen/fifteen"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="@dimen/three"
                    app:sliderIndicatorRadius="@dimen/two"
                    app:sliderIndicatorSelectedColor="@color/color1"
                    app:sliderIndicatorUnselectedColor="@color/buttomnav"
                    app:sliderScrollTimeInSec="1"
                    app:sliderStartAutoCycle="true" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="@dimen/edittextsize"
                android:fontFamily="@font/jost_bold"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginLeft="@dimen/thirty"
                android:layout_below="@id/banner_card"
                android:textColor="@color/textColor">


            </TextView>

            <LinearLayout
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/category_name"
                android:layout_margin="@dimen/ten">

                <include layout="@layout/showcatagory"></include>

                <include layout="@layout/showcatagory"></include>

                <include layout="@layout/showcatagory"></include>


            </LinearLayout>

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product"
                android:textSize="@dimen/edittextsize"
                android:fontFamily="@font/jost_bold"
                android:layout_marginLeft="@dimen/thirty"
                android:layout_below="@id/category"
                android:textColor="@color/textColor">

            </TextView>

            <LinearLayout
                android:id="@+id/category1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/product_name"
                android:layout_margin="@dimen/ten">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:background="@drawable/product_bg">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/showback_bg"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageview"
                            android:elevation="@dimen/five"
                            app:cardCornerRadius="@dimen/ten">

                            <ImageView
                                android:layout_width="@dimen/hundred_fifty"
                                android:layout_height="@dimen/hundred"
                                android:src="@drawable/images_removebg_preview">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/ten"
                                android:fontFamily="@font/jost_bold"
                                android:text="Bruton"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve_size">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/jost_bold"
                                android:text="From 449/-"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/twelve_size">

                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/ten"
                                android:background="@color/textColor"
                                android:padding="@dimen/ten">

                                <TextView
                                    android:id="@+id/timer_data1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/jost_bold"
                                    android:gravity="center"
                                    android:text="00:45:07"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/ten"
                                android:fontFamily="@font/jost_bold"
                                android:text="BID NOW"
                                android:textColor="@color/productcolor"
                                android:textSize="@dimen/edittextsize" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <include layout="@layout/shopwproduct"></include>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/category1"
                android:layout_margin="@dimen/ten">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:background="@drawable/product_bg">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/five"
                        android:background="@drawable/showback_bg"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageview"
                            android:elevation="@dimen/five"
                            app:cardCornerRadius="@dimen/ten">

                            <ImageView
                                android:layout_width="@dimen/hundred_fifty"
                                android:layout_height="@dimen/hundred"
                                android:src="@drawable/images_removebg_preview">

                            </ImageView>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/ten"
                                android:fontFamily="@font/jost_bold"
                                android:text="Bruton"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve_size">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/jost_bold"
                                android:text="From 449/-"
                                android:textColor="@color/textColor"
                                android:textSize="@dimen/twelve_size">

                            </TextView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/ten"
                                android:background="@color/textColor"
                                android:padding="@dimen/ten">

                                <TextView
                                    android:id="@+id/timer_data"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/jost_bold"
                                    android:gravity="center"
                                    android:text="00:45:07"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/textsize" />

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/ten"
                                android:fontFamily="@font/jost_bold"
                                android:text="BID NOW"
                                android:textColor="@color/productcolor"
                                android:textSize="@dimen/edittextsize" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <include layout="@layout/shopwproduct"></include>

            </LinearLayout>



            <!--        <androidx.recyclerview.widget.RecyclerView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_below="@id/banner_card"-->
            <!--            android:layout_marginTop="@dimen/twenty"-->
            <!--            android:id="@+id/catagoryRecycler">-->


            <!--        </androidx.recyclerview.widget.RecyclerView>-->

            <!--        <androidx.recyclerview.widget.RecyclerView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_below="@id/catagoryRecycler"-->
            <!--            android:layout_marginTop="@dimen/twenty"-->
            <!--            >-->


            <!--        </androidx.recyclerview.widget.RecyclerView>-->


        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>




</RelativeLayout>