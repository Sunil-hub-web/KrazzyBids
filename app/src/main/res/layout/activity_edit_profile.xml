        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/hundred_fifty"
            android:layout_marginStart="@dimen/three"
            android:layout_marginTop="@dimen/three"
            android:layout_marginEnd="@dimen/three"
            android:layout_marginBottom="@dimen/three"
            android:background="@drawable/topbackground">

            <ImageView
                android:id="@+id/imagEditBack"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/previous"
                android:layout_margin="@dimen/ten">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"
                android:textColor="@color/buttomnav1"
                android:fontFamily="@font/poppins_bold"
                android:textSize="@dimen/twenty_three"
                android:layout_marginLeft="@dimen/twenty_five"
                android:layout_marginTop="@dimen/ten"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rel_ProfileImage"
            android:layout_marginTop="@dimen/seventy"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/hundred_eighty"
                android:layout_height="@dimen/hundred_eighty"
                android:src="@drawable/profile"
                android:layout_centerHorizontal="true"
                app:civ_border_width="@dimen/one"
                app:civ_border_color="@color/white"/>

            <ImageView
                android:id="@+id/photoPicker"
                android:layout_width="@dimen/thirty"
                android:layout_height="@dimen/thirty"
                android:src="@drawable/camera_profile"
                android:layout_below="@+id/profile_image"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_marginTop="@dimen/fifty_five"
                android:layout_marginLeft="@dimen/thirty_minse">


            </ImageView>


        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/fifteen"
            android:layout_below="@id/rel_ProfileImage"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:elevation="@dimen/five">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
