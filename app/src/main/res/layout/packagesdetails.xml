<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/hundred_eighty"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        android:elevation="@dimen/five"
        app:cardCornerRadius="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttomnav1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonbackground"
                android:padding="@dimen/ten"
                android:backgroundTint="@color/textColor">

                <TextView
                    android:id="@+id/packageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BASIC"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:textSize="@dimen/edittextsize"/>

            </LinearLayout>

            <TextView
                android:id="@+id/packagePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs 5000/-"
                android:textColor="@color/textColor2"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:textSize="@dimen/twenty"/>

            <TextView
                android:id="@+id/totalBid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20 Bid "
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:textSize="@dimen/edittextsize"/>

           <!-- <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rs 30/- (Per Bid) "
                android:textColor="@color/textColor"
                android:fontFamily="@font/jost_medium"
                android:gravity="center"
                android:textSize="@dimen/edittextsize"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/ten">

                <TextView
                    android:id="@+id/totalprice1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Rs 3000/-"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/jost_medium"
                    android:gravity="center"
                    android:textSize="@dimen/textsize"/>

                <TextView
                    android:id="@+id/totalprice2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Rs 3000/-"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/jost_medium"
                    android:gravity="center"
                    android:textSize="@dimen/textsize"/>



            </LinearLayout>

            <TextView
                android:id="@+id/offerprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="30% OFF"
                android:textColor="@color/textColor"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:textSize="@dimen/edittextsize"
                android:layout_marginTop="@dimen/five"/>

            <TextView
                android:id="@+id/btn_BYPackages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By Now"
                android:textColor="@color/white"
                android:fontFamily="@font/jost_bold"
                android:gravity="center"
                android:textSize="@dimen/edittextsize"
                android:layout_marginTop="@dimen/five"
                android:background="@drawable/buttonbackground"
                app:backgroundTint="@color/textColor2"
                android:padding="@dimen/six"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginBottom="@dimen/ten"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/ten"
                android:elevation="@dimen/five"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginBottom="@dimen/ten"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonbackground"
                    android:backgroundTint="@color/textColor2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/forty"
                        android:layout_centerInParent="true">

                        <ProgressBar
                            android:id="@+id/progressbar"
                            android:layout_width="@dimen/thirty"
                            android:layout_height="@dimen/thirty"
                            android:layout_centerVertical="true"
                            android:indeterminateTint="@color/white">

                        </ProgressBar>

                        <TextView
                            android:id="@+id/progessName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/progressbar"
                            android:fontFamily="@font/jost_bold"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/ten"
                            android:text="Wait..."
                            android:textColor="@color/white"
                            android:textSize="@dimen/edittextsize">


                        </TextView>

                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>